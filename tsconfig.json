{
  "compilerOptions": {
    "target": "ES2020",                       // Suporte a recursos modernos
    "module": "CommonJS",                     // Compatível com Node.js
    "lib": ["ES2020"],                        // Bibliotecas padrão do ES2020
    "allowJs": true,                          // Permitir arquivos .js
    "outDir": "./dist",                       // Saída dos arquivos compilados
    "rootDir": "./src",                       // Diretório raiz do código-fonte
    "strict": true,                           // Ativa todas as verificações estritas
    "moduleResolution": "node",               // Resolve módulos do Node.js
    "esModuleInterop": true,                  // Importação de módulos CommonJS
    "forceConsistentCasingInFileNames": true, // Força consistência em letras maiúsculas/minúsculas
    "skipLibCheck": true,                     // Pula checagem de tipos de dependências
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
