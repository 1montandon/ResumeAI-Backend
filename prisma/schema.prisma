generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User{
  id  String  @id @default(uuid())
  email String @unique
  username String @unique
  password String
  analyses Analyses[]
  createdAt     DateTime @default(now())
}

model Analyses{
  id String @id @default(uuid())
  jobDescription String
  score        Float
  strengths    String
  weaknesses   String
  overview     String  
  resumeUrl     String   // Caminho/URL do PDF salvo
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  createdAt     DateTime @default(now())

}